<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Basic</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/upload" class="active">Upload file</a>
    </div>

    <div class="upload-file-container">
      <form
        action="/upload-profile-pic"
        method="post"
        enctype="multipart/form-data"
      >
        <div>
          <label for="">Avatar:</label>
          <input type="file" name="profile_pic" />
        </div>
        <div>
          <button class="btn-save" type="submit">Upload</button>
        </div>
      </form>

      <form
        action="/upload-multiple-images"
        method="post"
        enctype="multipart/form-data"
      >
        <div>
          <label for="">Select multiple files:</label>
          <input type="file" name="multiple_images" multiple />
        </div>
        <div>
          <button class="btn-save" type="submit">Upload</button>
        </div>
      </form>
    </div>
  </body>
</html>
