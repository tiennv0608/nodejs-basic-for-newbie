<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Basic</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/upload" class="active">Upload file</a>
    </div>

    <div class="upload-file-container">
      <h1>Handling FIle Uploads using Express.js and Multer</h1>
      <form
        action="/upload-profile-pic"
        method="post"
        enctype="multipart/form-data"
      >
        <div>
          <h2>Upload single file</h2>
          <div>
            <span>Upload your profile picture:</span>
            <input type="file" name="profile_pic" />
          </div>
        </div>
        <div>
          <button class="btn-save" type="submit">Upload</button>
        </div>
      </form>
      <hr />
      <form
        action="/upload-multiple-images"
        method="post"
        enctype="multipart/form-data"
      >
        <div>
          <h2>Upload multiple files</h2>
          <div>
            <span>Select multiple files:</span>
            <input type="file" name="multiple_images" multiple />
          </div>
        </div>
        <div>
          <button class="btn-save" type="submit">Upload</button>
        </div>
      </form>
    </div>
  </body>
</html>
